---
import Layout from "../components/Layout.astro";
import PlanningComponent from "../components/Planning.astro";
import InfoBox from "../components/InfoBox.astro";
import * as style from "./planning.css.ts";
import { getAllEvents } from "../data/conference-data";

const allEvents = getAllEvents();
---

<Layout pageClass={style.planningPage} title="Programme Tech-f-est 2025">
  <div class={style.planningContainer}>
    <header class={style.pageHeader}>
      <h1 class={style.pageTitle}>Programme</h1>
      <p class={style.pageSubtitle}>13 Juin 2025 • IUT Charlemagne - Nancy</p>
    </header>

    <InfoBox>
      <strong>Changement de dernière minute :</strong>
      La conférence de Marcy Ericka Charollois est remplacée par une intervention de <strong>Danielle Kayumbi (Capgemini)</strong> :
      <em>« Tracez votre code applicatif avec OpenTelemetry »</em>.
      Merci de votre compréhension !
    </InfoBox>
    
    <PlanningComponent events={allEvents} />
    
    <div class={style.planningFooter}>
      <p>Les conférences durent 40 minutes, avec temps d'échange inclus</p>
      <a href="/speakers" class={style.speakersLink}>Découvrir tous les intervenants</a>
    </div>
  </div>
</Layout>